{
	"version": "2.0.0",
    "options": {
        "env": {
             "BUILD_ID": "build_3",
             "DTP_PROJECT": "ICEORYX"
        }
   },
 
	"tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "bash -c 'cmake -DCPPTEST_COVERAGE=ON -Bbuild --toolchain cmake/iar-toolchain.cmake && cmake --build build -- VERBOSE=ON'",
            "group": "build"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "bash -c 'rm -rf build/cpptest-coverage/simpleProject/*.clog && ./cspybat_sim.sh build/hello-world.elf'",
            "group": "build"
        },
		{
            "label": "Generate Reports",
            "type": "shell",
            "command": "bash -c 'cd build && make cpptestcov-compute && make cpptestcov-report'",
            "group": "build"
        },
        {
            "label": "Delete build",
            "type": "shell",
            "command": "bash -c 'rm -fr build'",
            "group": "build"
        }

    ]
}
